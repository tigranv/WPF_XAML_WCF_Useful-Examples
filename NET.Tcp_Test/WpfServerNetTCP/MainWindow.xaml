<Window x:Class="WpfServerNetTCP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfServerNetTCP"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="300">
    <Grid>

        <Grid.Background>
            <LinearGradientBrush>
                <GradientStop Color="LightSlateGray" Offset="0" />
                <GradientStop Color="White" Offset="0.5" />
                <GradientStop Color="LightSlateGray" Offset="0.9" />
            </LinearGradientBrush>
        </Grid.Background>

        <Button Height="23" Width="82" Margin="0,0,15,88" VerticalAlignment="Bottom" HorizontalAlignment="Center" x:Name="buttonStop" Click="buttonStop_Click">Stop</Button>
        <TextBlock Name="TxBlockOperations" Width="200" Height="50"></TextBlock>
        <Button Height="23" Width="82" Margin="0,96,15,0" VerticalAlignment="Top" HorizontalAlignment="Center" x:Name="buttonStart" Click="buttonStart_Click">Start</Button>

        <Label Height="28" Margin="10,0,15,45" VerticalAlignment="Bottom" x:Name="labelStatus">Status</Label>
        <Label Height="37" Margin="10,18,15,0" HorizontalAlignment="Center" VerticalAlignment="Top" x:Name="labelTitle"  FontSize="20" >Chat Service</Label>

    </Grid>
</Window>
